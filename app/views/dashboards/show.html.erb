<div class="container">
  <h1>My Dashboard</h1>
  <br>
  <h3>Your saved Activities</h3>

<ul>
    <% @bookmarks.each do |bookmark| %>
      <% if bookmark.user == current_user %>
        <br>
        <br>
        <h5><strong><%= bookmark.activity.name %></strong></h5>
        <div>
          <%= link_to 'Remove', bookmark_path(bookmark.id), method: :delete, data: { confirm: "Are you sure you want to remove your bookmark?"} %>

        </div>
      <% end %>
    <% end %>
  </ul>
