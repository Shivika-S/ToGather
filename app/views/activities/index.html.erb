<div class="container">
  <h1>Choose your preferences</h1>

  <%= simple_form_for @activity, method: :get do |f| %>
    <%= f.association :category, label_method: :name %>
    <%= f.date_field :start_time %>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>


</div>
<div class="container">
  <% @activities.each do |activity| %>
    <h2><strong><%= link_to activity.name, category_activity_path(activity.category, activity) %></strong></h2>
    <%= activity.description %>
    <div class="bookmark-buttons">
      <%= link_to 'Save', bookmark_path(activity_id: activity.id), method: :post, class: "btn btn-info" %>

    <% end %>
    </div>
</div>


