<div style="background-color: rgb(77, 77, 77);">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block" src="https://images.pexels.com/photos/6089998/pexels-photo-6089998.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block" src="https://images.unsplash.com/photo-1423483641154-5411ec9c0ddf?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block" src="https://images.unsplash.com/photo-1535679706075-20c8cf734c95?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1025&q=80" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="activities-show d-flex justify-content-between container mt-0 py-3">
    <div class="activity-details">
      <h1><%= @activity.name %></h1>
      <p><%= @activity.description %></p>
      <p><%= @activity.address %></p>
      <p><%= @activity.start_time %></p>
      <%= link_to "Join the chat!", chatroom_path(@chatroom.id), class: "btn btn-info" %>
    </div>



    <div class="map-container">
      <a class="weatherwidget-io" href="https://forecast7.com/en/n37d81144d96/melbourne/" data-label_1="MELBOURNE" data-label_2="WEATHER" data-font="Jura" data-icons="Climacons Animated" data-mode="Current" data-days="3" data-textcolor="#ffffff" data-suncolor="#ff9500" >MELBOURNE WEATHER</a>
      <script>
      !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src='https://weatherwidget.io/js/widget.min.js';fjs.parentNode.insertBefore(js,fjs);}}(document,'script','weatherwidget-io-js');
      </script>
      <div id="map"
      style="width: 400px; height: 400px; border-radius: 20px 20px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <div class="map-info">
          <a href="https://maps.google.com/maps?ll=<%= @activity.latitude%>,<%= @activity.longitude%>&z=15&t=m&hl=en&gl=AU&mapclient=embed&daddr=<%= @activity.address%>@<%= @activity.latitude%>,<%= @activity.longitude%>">Directions</a>
      </div>
    </div>
  </div>

    <div class="container-cards">
      <div class="show-cards">
        <% if @activity.photos[0] %>
          <div class="show-card" style="background-image: url(<%= cl_image_path(@activity.photos[0].key,
            class: "card-images", height: 600, fit: :clip) %>)">
          </div>
        <% end %>
        <% if @activity.photos[1] %>
          <div class="show-card" style="background-image: url(<%= cl_image_path(@activity.photos[1].key,
            class: "card-images", height: 600, fit: :clip) %>)">
          </div>
        <% end %>
        <% if @activity.photos[2] %>
          <div class="show-card" style="background-image: url(<%= cl_image_path(@activity.photos[2].key,
            class: "card-images", height: 600, fit: :clip) %>)">
          </div>
        <% end %>
        <% if @activity.photos[3] %>
          <div class="show-card" style="background-image: url(<%= cl_image_path(@activity.photos[3].key,
            class: "card-images", height: 600, fit: :clip) %>)">
          </div>
        <% end %>
      </div>
    </div>
  <%= social_share_button_tag(@activity.name) %>
</div>
