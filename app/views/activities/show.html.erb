<div class="container">
  <h1><%= @activity.name %></h1>
    <div class="map-container">
        <div id="map"
        style="width: 300px; height: 500px; border-radius: 5px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
        <div class="map-info">
            <a href="https://maps.google.com/maps?ll=<%= @activity.latitude%>,<%= @activity.longitude%>&z=15&t=m&hl=en&gl=AU&mapclient=embed&daddr=<%= @activity.address%>@<%= @activity.latitude%>,<%= @activity.longitude%>">Directions</a>
        </div>
    </div>
</div>