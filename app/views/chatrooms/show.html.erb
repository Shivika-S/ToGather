  <div class="row rounded-lg overflow-hidden shadow">
    <!-- Users box-->
    <div class="col-5 px-0">
      <div class="bg-white">

        <div class="chatrooms">
          <% current_user.chatrooms.each do |chatroom| %>
            <% print_active_class = chatroom == @chatroom ? "active" : "" %>
                <div class="list-group rounded-0 <%= print_active_class%>">
                    <a href="<%= chatroom_path(chatroom.id) %>" class="list-group-item list-group-item-action list-group-item rounded-0" id="chatroom-background">
                        <div class="media">
                            <div class="media-body ml-4">
                            <div class="d-flex align-items-center justify-content-between mb-1">
                                <h6 class="mb-0" id="chatroom-header"><%= chatroom.name %></h6>
                            </div>
                            </div>
                        </div>
                    </a>
                </div>
          <% end %>

        </div>
      </div>
    </div>
    <!-- Chat Box-->
    <div class="col-7 px-0" id="chat-wrapper">
      <div class="px-4 py-5 chat-box">
        
        <!-- Messages-->
        <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
            <% @chatroom.messages.each do |message| %>

                <% reciever_id = current_user == message.chatroom_user.user ? "sender-message" : "reciever-message" %>

                <% ml_auto = current_user == message.chatroom_user.user ? "" : "ml-auto" %>

                <div class="media w-50 <%= ml_auto %> mb-3">
                    <div class="media-body ml-3">
                        <div class=" py-2 px-3 mb-2" id="<%= reciever_id %>">
                            <p class="text-small mb-0 text-muted">
                            <%= render 'messages/message', message: message%>
                            </p>
                        </div>
                        <p class="small text-muted"><%= message.created_at.strftime("%l:%M%p | %b %e") %>
                        </p>
                    </div>
                </div>
            <% end %>
        </div>

      <!-- Typing area -->
      
        <div class="input-group">
          <%= simple_form_for [ @chatroom, @message ] do |f| %>
            <%= f.input :content, label: false, class: "form-control rounded-0 border-0 py-4 bg-light", id: "chat-input", placeholder: "Type a message" %>
          <% end %>
        </div>

    </div>
  </div>
</div>